generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Male
  Female
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  phoneNumber  String @unique
  passwordHash String
  firstName    String
  lastName     String
  bvn          String @unique

  email       String?   @unique
  gender      Gender?
  dataOfBirth DateTime? @db.Date
}

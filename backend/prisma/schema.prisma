generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  phoneNumber  String    @unique
  passwordHash String
  firstName    String
  lastName     String
  bvn          String?   @unique
  dateOfBirth  DateTime? @db.Date
  email        String?   @unique
  gender       Gender?
}

enum Gender {
  Male
  Female
}
